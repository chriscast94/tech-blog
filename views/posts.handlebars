<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
 
  <p>Written by {{user.name}} on {{format_date date_created}}</p>
  
</div>

<form class="form new-project-form">
<div class="form-group">
{{!-- input form for adding a comment --}}
 <label id='comment-name'for="comment">Judge their writing:</label>
  <input class="form-input" type="text" id="comment-descr" />
  <div class="form-group">
  <button class="btn btn-primary submit-button" type="submit">submit</button>
  </div>
  
</div>
</form>

  {{#if comments.length}}
  <div class="col-md-6 project-list">
    <h3>Current Comment:</h3>

    {{#each comments as |comment|}}
    {{!-- render the comments --}}
    <div class="row mb-2 ">
      <div class="col-md-8">
         <h4>{{comment.description}}</h4> 
      </div> 
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger dlt-button" data-id="{{comment.id}}">DELETE</button>
      </div>
       <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>

    {{/each}}
  </div>
  {{/if}}


</div>

<script src="/public/js/login.js"></script>